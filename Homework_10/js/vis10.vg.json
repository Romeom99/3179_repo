{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "title": "Forest Fires in the Brazilian Amazon",
    "data": {
        "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_10/data/treecover_loss_by_region__ha.csv"
    },
    "transform": [
        {
            "lookup": "iso",
            "from":{
                "data":{
                    "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_10/data/iso_metadata.csv"
                },
                "key": "iso",
                "fields": ["name"]
            },
            "as": ["country_name"]
        },
        {
            "lookup": "country_name",
            "from":{
                "data": {
                    "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_10/data/countries%20of%20the%20world.csv"
                },
                "key": "Country",
                "fields": ["Area (sq. mi.)"]
            },
            "as": ["area"]
        },
        {
            "calculate": "datum.tree_loss_ha/datum.area",
            "as": "Tree loss ha/sq.mi"
        }

    ],
    "encoding": {
        "x": {
            "field": "year",
            "type": "temporal",
            "title": "Year"
        },
        "y": {
            "field": "tree_loss_ha",
            "type": "quantitative",
            "title": "Tree Cover Loss (ha)",
            "axis": {"tickCount": 6},
            "scale": {"type": "linear"}
        }
    },
    "layer": [
        {
            "mark":"line",
            "encoding": {
                "color":{"field":"iso","type": "nominal"},
                "tooltip":{"field":"iso", "type": "nominal"}
            }
            
        }
    ]
}