{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "title": "Forest Fires in the Brazilian Amazon",
    "data": {
        "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_10/data/treecover_loss_by_region__ha.csv"
    },
    "params": [

    ],
    "transform": [
        {
            "lookup": "iso",
            "from": {
                "data":{
                    "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_10/data/land-area-km.csv"
                },
                "key": "Code",
                "fields": ["area","Entity"]
            },
            "as": ["country_area","country_name"]
        },
        {"filter": "datum.country_name != null"},
        {"filter": {"field": "country_name", "equal":"Brazil"}},
        {
            "calculate": "datum.tree_loss_ha/datum.country_area",
            "as": "Tree loss (ha/km)"
        }
    ],
    "encoding": {
        "x": {
            "field": "year",
            "type": "temporal",
            "title": "Year"
        },
        "y": {
            "field": "Tree loss (ha/km)",
            "type": "quantitative",
            "title": "Tree Cover Loss (ha)",
            "axis": {"tickCount": 6},
            "scale": {"type": "linear"}
        }
    },
    "layer": [
        {
            "mark":"line",
            "encoding": {
                "color":{"field":"country_name","type": "nominal"},
                "tooltip":[
                    {"field":"country_name", "type": "nominal"},
                    {"field":"country_area","type": "quantitative"}
                ]
            }
            
        }
    ]
}