{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
        "view": {
           "stroke": "transparent"
        }
      },
    "width": 450,
    "height": 450,
    "title": "Forest Fires in the Brazilian Amazon",
    "data": {
        "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_9/data/inpe_brazilian_amazon_fires_1999_2019.csv"
    },
    "projection": {"type":"azimuthalEqualArea"},
    "params": [
        {
            "name": "years",
            "value": "1999",
            "bind": {
                "input": "select",
                "options": [
                    "1999",
                    "2000",
                    "2001",
                    "2002",
                    "2003",
                    "2004",
                    "2005",
                    "2006",
                    "2007",
                    "2008",
                    "2009",
                    "2010",
                    "2011",
                    "2012",
                    "2013",
                    "2014",
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019"
                ],
                "labels": [
                    "1999",
                    "2000",
                    "2001",
                    "2002",
                    "2003",
                    "2004",
                    "2005",
                    "2006",
                    "2007",
                    "2008",
                    "2009",
                    "2010",
                    "2011",
                    "2012",
                    "2013",
                    "2014",
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019"
                ],
                "name": "Select years: "
            }
        }
    ],
    "transform": [
        {"filter": "datum.year == years"}
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_9/js/ne_110m_ocean.json",
                "format": {"type": "topojson", "feature": "ne_110m_ocean"}
            },
            "mark": {"type": "geoshape", "fill": "#e5f9fb"}
        },
        {
            "data":{
                "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_9/js/ne_110m_admin_0_countries.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "#e0e0e0"}
        },
        {
            "data":{
                "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_9/js/ne_50m_admin_1_states_provinces.json",
                "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
            },
            "mark": {"type": "geoshape", "fill": "#cdcdcd", "stroke": "black", "strokeWidth": 0.5}
        },
        {
            "mark": "circle",
            "encoding": {
                "longitude": {"field": "longitude", "type": "quantitative"},
                "latitude": {"field": "latitude", "type": "quantitative"},
                "size":{
                    "field": "firespots",
                    "type": "quantitative",
                    "title": "Number of forest fire outbreaks",
                    "scale": {
                        "type": "threshold",
                        "domain": [50,100, 200, 1000, 5000, 10000, 20000],
                        "range": [20,50,100,150, 200, 300, 400, 500]
                    }
                },
                "color": {"value": "#f86d07"},
                "opacity": {"value": 0.6}
            }
        }
    ]
}