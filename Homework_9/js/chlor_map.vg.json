{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Forest levels in Brazil",
    "projection": {"type":"equalEarth"},
    "layer": [
        {
            "data":{
                "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_9/js/ne_110m_admin_0_countries.topojson",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "#e0e0e0"}
        },
        {
            "data":{
                "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_9/js/ne_50m_admin_1_states_provinces.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
            },
            "mark": {"type": "geoshape", "fill": "#cdcdcd", "stroke": "black", "strokeWidth": 0.5}
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Homework_9/data/inpe_brazilian_amazon_fires_1999_2019.csv"
            },
            "mark": "circle",
            "encoding": {
                "longitude": {"field": "longitude", "type": "quantitative"},
                "latitude": {"field": "latitude", "type": "quantitative"},
                "size":{
                    "field": "firespots",
                    "type": "quantitative",
                    "title": "Number of forest fire outbreaks",
                    "scale": {
                        "type": "threshold",
                        "domain": [50, 100, 200, 500, 1000, 5000, 10000, 20000],
                        "range": [2, 5, 10, 50, 150, 200, 300, 400, 500]
                    }
                },
                "color": {"value": "#f86d07"},
                "opacity": {"value": 0.6}
            }
        }
    ]
}