{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
        "view": {
           "stroke": "transparent"
        }
      },
    "width": 500,
    "height": 800,
    "title": "Deforestation in Brazil by State",
    "data":{
        "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Data_vis_2_3179/js/geojson/ne_50m_admin_1_states_provinces.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
    },
    "projection": {"type":"azimuthalEqualArea"},
    "params": [
        {
            "name": "years",
            "value": "2001",
            "bind": {
                "input": "select",
                "options": [
                    "2001",
                    "2002",
                    "2003",
                    "2004",
                    "2005",
                    "2006",
                    "2007",
                    "2008",
                    "2009",
                    "2010",
                    "2011",
                    "2012",
                    "2013",
                    "2014",
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019",
                    "2020",
                    "2021",
                    "2022"
                ],
                "labels": [
                    "2001",
                    "2002",
                    "2003",
                    "2004",
                    "2005",
                    "2006",
                    "2007",
                    "2008",
                    "2009",
                    "2010",
                    "2011",
                    "2012",
                    "2013",
                    "2014",
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019",
                    "2020",
                    "2021",
                    "2022"
                ],
                "name": "Select years: "
            }
        }
    ],
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Data_vis_2_3179/data/cal_heat/adm1_metadata.csv"
                },
                "key": "name",
                "fields": ["adm1__id", "area__ha"]
            },
            "as": ["id", "state_area"]
        }
    ],
    "layer": [
        {
            "name": "oceans",
            "data": {
                "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Data_vis_2_3179/js/geojson/ne_110m_ocean.json",
                "format": {"type": "topojson", "feature": "ne_110m_ocean"}
            },
            "mark": {"type": "geoshape", "fill": "#e5f9fb"}
        },
        {
            "name": "countries",
            "data":{
                "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Data_vis_2_3179/js/geojson/ne_110m_admin_0_countries.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "#e0e0e0"}
        },
        {
            "mark": {"type": "geoshape", "fill": "#cdcdcd", "stroke": "black", "strokeWidth": 0.2}
        },
        {
            "transform": [
                {
                    "lookup": "id",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Data_vis_2_3179/data/cal_heat/treecover_loss_by_region__ha.csv"
                        },
                        "key": "adm1",
                        "fields": ["umd_tree_cover_loss__year","tree_loss_state"]
                    },
                    "as": ["year", "tree_loss_state_ha"]
                },
                {
                    "calculate": "(datum.tree_loss_state_ha/datum.state_area) * 100",
                    "as": "tree_loss_state_km"
                }
            ],
            "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.2},
            "encoding": {
                "color": {
                    "title": "Tree loss per 100 km^2",
                    "field": "tree_loss_state_km",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "greens"
                    }
                },
                "tooltip": [
                    {
                        "field": "tree_loss_state_km", 
                        "type": "quantitative", 
                        "title": "Tree loss per 100 square kilometers", 
                        "format": ".2f"
                    },
                    {
                        "field": "year",
                        "type": "nominal",
                        "title": "Year"
                    },
                    {
                        "field": "properties.name",
                        "type": "nominal",
                        "title": "State"
                    }
                ]
            }
        }
    ]
}