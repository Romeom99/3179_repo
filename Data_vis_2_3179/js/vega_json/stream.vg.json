{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
    "width": "container",
    "data": {
        "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Data_vis_2_3179/data/stream/treecover_loss__ha.csv"
    },
    "transform": [
        {
            "filter": "datum.causes !== 'Unknown'"
        },
        {
            "calculate": "datum.tree_loss*0.01",
            "as": "tree_loss_km"
        }
    ],
    "vconcat": [
        {
            "mark": "area",
            "params": [
                {"name": "yearInt", "select":  {"type": "interval",
                "encodings": ["x"]}}
            ],
            "encoding": {
            "x": {
                "timeUnit": "year", "field": "year",
                "axis": {"domain": false, "format": "%Y", "tickSize": 0},
                "title": null
            },
            "y": {
                "aggregate": "sum",
                "field": "tree_loss_km",
                "title": "Tree loss (square kilometer)"
            },
            "color": {
                    "field": "causes", 
                    "scale":{
                        "range": ["#C5413A", "#3ABEC5", "#BDC23D", "#423DC2", "#C23D8D", "#7E59A6"]
                    }
                }
            },
            "height": 300
        },
        {
            "height": 100,
            "transform": [
                {"filter": {"param": "yearInt", "empty": false}}
            ],
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "causes",
                    "type": "ordinal",
                    "sort": "descending",
                    "title": "Cause"
                },
                "x": {
                    "aggregate": "sum",
                    "field": "tree_loss_km",
                    "title": "Tree Loss to cause ",
                    "scale": {
                        "type": "sqrt"
                    }
                },
                "color": {
                    "field": "causes",
                    "title": "Cause",
                    "scale": {
                        "range": ["#C5413A", "#3ABEC5", "#BDC23D", "#423DC2", "#C23D8D", "#7E59A6"]
                    }
                },
                "tooltip": [
                    {"field": "causes", "type": "nominal", "title": "Cause"},
                    {"field": "tree_loss_km", "type": "quantitative", "title": "Tree loss (square kilometer)"}
                ]
            }
        }
       
    ],
    "config": {}
}
  