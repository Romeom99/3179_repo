{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
    "background": "#c8ebcc",
    "data": {
        "url": "https://raw.githubusercontent.com/Romeom99/3179_repo/main/Data_vis_2_3179/data/stream/treecover_loss__ha.csv"
    },
    "transform": [
        {
            "filter": "datum.causes !== 'Unknown'"
        },
        {
            "calculate": "datum.tree_loss*0.01",
            "as": "tree_loss_km"
        }
    ],
    "vconcat": [
        {
            "width": 715,
            "height": 250,
            "mark": "area",
            "params": [
                {"name": "yearInt", "select":  {"type": "interval","encodings": ["x"]}}
            ],

            "encoding": {
                "x": {
                    "timeUnit": "year", "field": "year",
                    "axis": {
                        "domain": false, 
                        "format": "%Y", 
                        "tickSize": 0,
                        "gridColor": "black",
                        "gridOpacity": 0.2
                    },
                    "title": null
                },
                "y": {
                    "aggregate": "sum",
                    "field": "tree_loss_km",
                    "title": "Tree loss (square kilometer)",
                    "axis": {
                        "gridColor": "black",
                        "gridOpacity": 0.2
                    }
                    
                },
                "color": {
                    "field": "causes", 
                    "scale":{
                        "range": ["#d42bd4", "#1a0ef1", "#1de2e2", "#5929A3", "#f86d07"]
                    }
                }
            } 
        },
        {
            "width": 625,
            "height": 50,
            "title": "Pick the year range on the graph above by dragging with your mouse",
            "transform": [
                {"filter": {"param": "yearInt", "empty": false}},
                {
                    "window": [{"op": "sum", "field": "tree_loss_km", "as": "sumTree"}],
                    "frame": [null,null],
                    "groupby": ["causes"]
                }
            ],
            "layer": [
                {
                    "mark": "bar",
                    "encoding": {
                        "y": {
                            "field": "causes",
                            "type": "ordinal",
                            "sort": "descending",
                            "title": null,
                            "axis": {
                                "labels": false,
                                "gridColor": "black",
                                "gridOpacity": 0.2
                            }
                        },
                        "x": {
                            "field": "tree_loss_km",
                            "title": "Tree Loss to cause (square Kilometer)",
                            "scale": {
                                "type": "sqrt",
                                "domain": [0, 350000]
                            },
                            "axis": {
                                "gridColor": "black",
                                "gridOpacity": 0.2
                            }
                        },
                        "color": {
                            "field": "causes",
                            "title": "Cause",
                            "scale": {
                                "range": ["#d42bd4", "#1a0ef1", "#1de2e2", "#5929A3", "#f86d07"]
                            }
                        },
                        "tooltip": [
                            {"field": "causes", "type": "nominal", "title": "Cause"},
                            {"field": "sumTree", "type": "quantitative", "title": "Tree loss (square kilometer)", "format": ".0f"}
                        ]
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "align":"left",
                        "baseline": "middle",
                        "dx": 3
                    },
                    "encoding": {
                        "x":{
                            "field": "sumTree",
                            "scale": {
                                "type": "sqrt",
                                "domain": [0, 350000]
                            }
                        },
                        "y":{
                            "field": "causes",
                            "type": "ordinal",
                            "sort": "descending",
                            "title": "Cause"
                        },
                        "text": {"field": "sumTree", "type": "quantitative", "format": ".0f"}
                    }
                }
            ]
            
        }
       
    ],
    "config": {}
}
  